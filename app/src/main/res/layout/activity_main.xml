<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/player1_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Enter Player1 name"
        android:textColor="@android:color/black"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/player2_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player1_name"
        android:layout_marginTop="16dp"
        android:hint="Enter Player2 name"
        android:textColor="@android:color/black"
        android:textSize="35dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/gradient_normal"
        android:textStyle="italic"
        android:text="Start 2 player game" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/button"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/gradient_normal"
        android:textStyle="italic"
        android:text="Start 1 player game" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:hint="Enter No. of Rounds"
        android:inputType="number" />

</RelativeLayout>