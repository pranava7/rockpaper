<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/player_image"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/comp_score"
            android:layout_width="0dp"
            android:layout_marginTop="32dp"
            android:layout_height="140dp"
            android:textSize="40sp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/comp_image"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/comp_player1_rock"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"
            android:scaleType="centerInside"
            android:src="@drawable/rock2" />

        <ImageView
            android:id="@+id/comp_player1_paper"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:src="@drawable/paper1" />

        <ImageView
            android:id="@+id/comp_player1_scissors"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:src="@drawable/scissors2" />
    </LinearLayout>

</RelativeLayout>